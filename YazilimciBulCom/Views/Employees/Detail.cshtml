@model YazilimciBulCom.Entities.Employees.EmployeeGetByIdDto

@{
    ViewData["Title"] = $"{Model.FirstName} {Model.LastName}";
}

<div class="mb-10 ml-5 mt-5">
    <a asp-controller="Employees" asp-action="Index">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
            <path d="M21 11H6.414l5.293-5.293-1.414-1.414L2.586 12l7.707 7.707 1.414-1.414L6.414 13H21z"></path>
        </svg>
    </a>
</div>
<div class="h-full flex flex-col gap-y-10 mt-5 lg:flex-row justify-around">
    <div class="flex justify-center">
        <img class="w-11/12 h-11/12 lg:w-full lg:h-96 lg:grow rounded object-cover" 
             src="@Model.PhotoUrl" asp-append-version="true"
             alt="profile_photo">
    </div>
    <div class="px-7 w-full lg:w-11/12">
        <div class="flex flex-col gap-y-5 shadow px-2 py-2 rounded">
            <div>
                <span class="font-bold">İsim - Soyisim : </span>
                <span class="text-lg">@Model.FirstName @Model.LastName</span>
            </div>
            <div>
                <span class="font-bold">E-Posta : </span>
                <span class="text-lg">@Model.Email</span>
            </div>
            <div>
                <span class="font-bold">Telefon : </span>
                <span class="text-lg">@Model.PhoneNumber</span>
            </div>
            <div>
                <span class="font-bold">İkametgah : </span>
                <span class="text-lg">@Model.ProvinceName</span>
            </div>
            <div>
                <span class="font-bold">Alanı : </span>
                <span class="text-lg">@Model.DepartmentName</span>
            </div>
            <div>
                <span class="font-bold">Yaş :</span>
                <span class="text-lg">18</span>
            </div>
            <div>
                <span class="font-bold">Maaş Beklentisi : </span>
                <span class="text-lg">@Model.SalaryExpectation</span>
            </div>
            <div>
                <span class="font-bold">Hakkında : </span>
                <span class="text-base">
                    @Model.Description
                </span>
            </div>

        </div>
    </div>
</div>